<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="ie.fio.dave.digiwebusage.DigiwebUsage">

        <TextView
            android:id="@+id/hey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hey!"
            android:textSize="24sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="11dp"/>

        <Button
            android:text="Digiweb forums"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:onClick="onDigiwebForumsClick"/>

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/hey"
            android:layout_marginTop="20dp"
            android:text="Digiweb provide access to your usage information via smart forum boards.  You'll need your forum username and password, as well as your broadband username and password for this application to work." />

        <TextView
            android:id="@+id/forumusername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/description"
            android:layout_marginTop="15dp"
            android:fontFamily="sans-serif"
            android:text="Forum username"
            android:textStyle="normal|bold" />

        <EditText
            android:id="@+id/forumusernameeditbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/forumusername"
            android:layout_centerVertical="true"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:text="Username" />

        <TextView
            android:id="@+id/forumpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/forumusernameeditbox"
            android:layout_marginTop="15dp"
            android:text="Forum password"
            android:textStyle="normal|bold" />

        <EditText
            android:id="@+id/forumpasswordeditbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/forumpassword"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/broadbandusername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/forumpasswordeditbox"
            android:layout_marginTop="15dp"
            android:text="Broadband username"
            android:textStyle="normal|bold" />

        <EditText
            android:id="@+id/broadbandusernameeditbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/broadbandusername"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="015555555" />

        <TextView
            android:id="@+id/broadbandpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/broadbandusernameeditbox"
            android:layout_marginTop="15dp"
            android:text="Broadband password"
            android:textStyle="normal|bold" />

        <EditText
            android:id="@+id/broadbandpasswordeditbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/broadbandpassword"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:inputType="textPassword"
            android:text="" />

        <Button
            android:id="@+id/savebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/broadbandpasswordeditbox"
            android:ems="10"
            android:text="Done"
            android:onClick="onSavedConnectClick"/>

    </RelativeLayout>

</ScrollView>